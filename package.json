{
  "name": "volleyball-scoreboard",
  "version": "0.1.0",
  "description": "Professional Volleyball Scoreboard for Live Streaming with OBS",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "lint": "run-s lint:*",
    "format": "prettier --write src/",
    "controller": "vite --port 3000 --open /controller",
    "overlay": "vite --port 3001 --open /overlay",
    "dev:dual": "concurrently \"npm run controller\" \"npm run overlay\"",
    "clean": "rm -rf dist node_modules/.cache",
    "prepare": "npm run lint && npm run type-check"
  },
  "keywords": [
    "volleyball",
    "scoreboard",
    "streaming",
    "obs",
    "vue",
    "typescript",
    "sports"
  ],
  "author": "Kronnos <ing.korozco@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "date-fns": "^4.1.0",
    "lodash-es": "^4.17.21",
    "lucide-vue-next": "^0.540.0",
    "pinia": "^3.0.3",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@prettier/plugin-oxc": "^0.0.4",
    "@tsconfig/node22": "^22.0.2",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.17.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.0.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.31.0",
    "eslint-plugin-oxlint": "~1.8.0",
    "eslint-plugin-vue": "~10.3.0",
    "jiti": "^2.4.2",
    "npm-run-all2": "^8.0.4",
    "oxlint": "~1.8.0",
    "postcss": "^8.5.6",
    "prettier": "3.6.2",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.0",
    "vite": "npm:rolldown-vite@latest",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vue-tsc": "^3.0.4"
  }
}
